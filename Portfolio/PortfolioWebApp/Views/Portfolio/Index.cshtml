@{
    ViewData["Title"] = "Portfolio Page";
}

<body>
    <div class="regular">
        <!-- Introductory portfolio section - header + (optional) description -->
        <section>
            <div>
                <h1 class="display-4" style="text-align: center;  text-indent: 0px;"> <b>Portfolio</b></h1>
                <br />
                <p> Since I am a <span>technical artist</span>, my portfolio showcases a range of my technical and artistic feats. I am mostly versed in 2D illustration and software engineering, and I am actively working to expand my knowledge in 3D art.</p>
                <br />
            </div>
        </section>

        <!-- Quick links to three different portfolio sections: Game Dev, Software Dev, and 2D Illustrations -->
        <section class="quick-links autumn-bg">
            <div class="row">
                <div class="column">
                    <input type="button" onClick="document.getElementById('Game-Dev').scrollIntoView();" value="Game Dev" />
                </div>
                <div class="column">
                    <input type="button" onClick="document.getElementById('Software-Dev').scrollIntoView();" value="Software Dev" />
                </div>
                <div class="column">
                    <input type="button" onClick="document.getElementById('2D-Art').scrollIntoView();" value="2D Art" />
                </div>
                <div class="column">
                    <input type="button" onClick="document.getElementById('3D-Art').scrollIntoView();" value="3D Art" />
                </div>

            </div>
        </section>

        <hr />

        <!-- GAME DEVELOPMENT SECTION -->
        <section id="Game-Dev">
            <h2> <b>  Game Development</b></h2>
            <br />
            <div style="margin:10px; padding: 10px">
                <div class="row 1">
                    <div class="column 1">
                        <!-- Whisker Witchery -->
                        <div id="Whisker-Witchery" class="card">
                            <a class="card-bg" asp-controller="Portfolio" asp-action="WhiskerWitchery">
                                <h1 class="card-text title-white">Whisker Witchery</h1>
                            </a>
                            <div class="hide title-white card-fonts">
                                <div class="column">
                                    <h3 class="title-white">Whisker Witchery</h3>
                                    <hr />
                                    <h5 class="title-white mobile-header-text"><b>Personal Contributions:</b></h5>
                                    <div class="column">
                                            <ul class="title-white mobile-text">
                                                <li>
                                                Software Engineering
                                                </li>
                                                <li>
                                                Presentations & User Research
                                                </li>
                                                <li>
                                                UI/UX Design
                                                </li>
                                                <li>
                                                2D Illustrations & Promotional Materials
                                                </li>
                                            </ul>
                                        <br />
                                    </div>
                                    <div class="row">
                                        <div style="text-align:right; width: max-content; flex-grow:10; font-family:'Courier New'" class="column">
                                            <h5 style="text-align: right; padding-top: 3px;" class="text-white">
                                                READ MORE
                                            </h5>
                                        </div>
                                        <div class="column">
                                            <img src="~/Portfolio/Icons/next.png" class="card-arrow"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="column 2">
                        <!-- Leaf It Behind -->
                        <div id="Leaf-It-Behind" class="card">
                            <a class="card-bg" asp-controller="Portfolio" asp-action="LeafItBehind">
                                <h1 class="card-text title-white">Leaf It Behind</h1>
                            </a>
                            <div class="hide title-white card-fonts">
                                <div class="column">
                                    <h3 class="title-white">Leaf It Behind</h3>
                                    <hr />
                                    <h5 class="title-white mobile-header-text"><b>Personal Contributions:</b></h5>
                                    <div class="column">
                                        <ul class="title-white mobile-text">
                                            <li>
                                                Character Design
                                            </li>
                                            <li>
                                                Character Animation
                                            </li>
                                            <li>
                                                2D Illustrations
                                            </li>
                                            <li>
                                                Background Art
                                            </li>
                                        </ul>
                                        <br />
                                    </div>
                                    <div class="row">
                                        <div style="text-align:right; width: max-content; flex-grow:10; font-family:'Courier New'" class="column">
                                            <h5 style="text-align: right; padding-top: 3px;" class="text-white">
                                                READ MORE
                                            </h5>
                                        </div>
                                        <div class="column">
                                            <img src="~/Portfolio/Icons/next.png" class="card-arrow" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row 2">
                    <div class="column 3">
                        <!-- HiveQuest -->
                        <div id="HiveQuest" class="card">
                            <a class="card-bg" asp-controller="Portfolio" asp-action="HiveQuest">
                                <h1 class="card-text title-white">HiveQuest</h1>
                            </a>
                            <div class="hide title-white card-fonts">
                                <div class="column">
                                    <h3 class="title-white">HiveQuest</h3>
                                    <hr />
                                    <h5 class="title-white mobile-header-text"><b>Personal Contributions:</b></h5>
                                    <div class="column">
                                        <ul class="title-white mobile-text">
                                            <li>
                                                Software Engineering
                                            </li>
                                            <li>
                                                Production & Organization
                                            </li>
                                            <li>
                                                2D Illustrations
                                            </li>
                                            <li>
                                                Writing
                                            </li>
                                        </ul>
                                        <br />
                                    </div>
                                    <div class="row">
                                        <div style="text-align:right; width: max-content; flex-grow:10; font-family:'Courier New'" class="column">
                                            <h5 style="text-align: right; padding-top: 3px;" class="text-white">
                                                READ MORE
                                            </h5>
                                        </div>
                                        <div class="column">
                                            <img src="~/Portfolio/Icons/next.png" class="card-arrow" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="column 4">
                        <!-- Senior Hearts -->
                        <div id="Senior-Hearts" class="card">
                            <a class="card-bg" asp-controller="Portfolio" asp-action="SeniorHearts">
                                <h1 class="card-text title-white">Senior Hearts</h1>
                            </a>
                            <div class="hide title-white card-fonts">
                                <div class="column">
                                    <h3 class="title-white">Senior Hearts</h3>
                                    <hr />
                                    <h5 class="title-white mobile-header-text"><b>Personal Contributions:</b></h5>
                                    <div class="column">
                                        <ul class="title-white mobile-text">
                                            <li>
                                                Software Engineering
                                            </li>
                                            <li>
                                                Character Design
                                            </li>
                                            <li>
                                                2D Illustrations
                                            </li>
                                        </ul>
                                        <br />
                                    </div>
                                    <div class="row">
                                        <div style="text-align:right; width: max-content; flex-grow:10; font-family:'Courier New'" class="column">
                                            <h5 style="text-align: right; padding-top: 3px;" class="text-white">
                                                READ MORE
                                            </h5>
                                        </div>
                                        <div class="arrow-column">
                                            <img src="~/Portfolio/Icons/next.png" class="card-arrow" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </section>

        <hr />

        <!-- SOFTWARE DEVELOPMENT SECTION -->
        <section id="Software-Dev">
            <h2> <b>Software Development</b></h2>
            <br />

            <div style="margin:10px; padding: 10px">
                <div class="row 1">
                    <div class="column 1">
                        <!-- Proxy Server Project -->
                        <div id="HTTP-Proxy" class="card">
                            <a class="card-bg" asp-controller="Portfolio" asp-action="HTTPProxy">
                                <h1 class="card-text title-white">HTTP Web Proxy</h1>
                            </a>
                            <div class="hide title-white card-fonts">
                                <div class="column">
                                    <h3 class="title-white">HTTP Web Proxy</h3>
                                    <hr />
                                    <h5 class="title-white" style="font-size: 26px;"><b>Project Contributions:</b></h5>
                                    <div class="column">
                                        <ul class="title-white" style="font-size: 22px; text-align: left;">
                                            <li>
                                                Client-Server Communication
                                            </li>
                                            <li>
                                                Multi-Threading & Multi-Client Functionality
                                            </li>
                                            <li>
                                                Web Caching
                                            </li>
                                            <li>
                                                Web Filtering & Blocking
                                            </li>
                                        </ul>
                                        <br />
                                    </div>
                                    <div class="row">
                                        <div style="text-align:right; width: max-content; flex-grow:10; font-family:'Courier New'" class="column">
                                            <h5 style="text-align: right; padding-top: 3px;" class="text-white">
                                                READ MORE
                                            </h5>
                                        </div>
                                        <div class="arrow-column">
                                            <img src="~/Portfolio/Icons/next.png" style="width:100%; filter:invert(1); margin-left:auto;" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="column 2">
                        <!-- Computer Graphics Project -->
                        <div id="Ray-Tracing" class="card">
                            <a class="card-bg" asp-controller="Portfolio" asp-action="RayTracing">
                                <h1 class="card-text title-white">Ray Tracing</h1>
                            </a>
                            <div class="hide title-white card-fonts">
                                <div class="column">
                                    <h3 class="title-white">Ray Tracing Graphics Project</h3>
                                    <hr />
                                    <h5 class="title-white" style="font-size: 26px;"><b>Project Contributions:</b></h5>
                                    <div class="column">
                                        <ul class="title-white" style="font-size: 22px; text-align: left;">
                                            <li>
                                                Software Ray Tracing
                                            </li>
                                            <li>
                                                GLSL & WebGL
                                            </li>
                                        </ul>
                                        <br />
                                    </div>
                                    <div class="row">
                                        <div style="text-align:right; width: max-content; flex-grow:10; font-family:'Courier New'" class="column">
                                            <h5 style="text-align: right; padding-top: 3px;" class="text-white">
                                                READ MORE
                                            </h5>
                                        </div>
                                        <div class="arrow-column">
                                            <img src="~/Portfolio/Icons/next.png" style="width:100%; filter:invert(1); margin-left:auto;" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <hr />

