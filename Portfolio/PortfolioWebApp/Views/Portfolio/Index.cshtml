        <section id="2D-Art">
            <h2> <b>2D Art</b></h2>
            <br />
            <div class="gallery-row">
                <div class="gallery-column">
                    <a target="_blank" href="/Portfolio/2D/steppin_stones.png">
                        <img src="/Portfolio/2D/steppin_stones.png" alt=" - Ray Parker">
                    </a>
                </div>
                <div class="gallery-column" style="flex: 40%; max-width: 40%;">
                    <a target="_blank" href="/Portfolio/2D/2DPortfolio3.png">
