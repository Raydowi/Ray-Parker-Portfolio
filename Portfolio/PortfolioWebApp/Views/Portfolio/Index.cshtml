@{
    ViewData["Title"] = "Portfolio Page";
}

<body>
    <div class="regular">
        <!-- Introductory portfolio section - header + (optional) description -->
        <section>
            <div>
                <h1 class="display-4"> <b>Portfolio</b></h1>
                <p> I am a <span>software engineer aspiring to be a technical artist</span>, so I utilize my portfolio to broadcast my software engineering feats alongside my current technical artist pursuits.</p>
            </div>
        </section>

        <!-- Quick links to three different portfolio sections: Game Dev, Software Dev, and 2D Illustrations -->
        <section class="quick-links autumn-bg">
            <div class="row">
                <div class="column">
                    <input type="button" onClick="document.getElementById('Game-Dev').scrollIntoView();" value="Game Dev" />
                </div>
                <div class="column">
                    <input type="button" onClick="document.getElementById('Software-Dev').scrollIntoView();" value="Software Dev" />
                </div>
                <div class="column">
                    <input type="button" onClick="document.getElementById('2D-Art').scrollIntoView();" value="2D Illustrations" />
                </div>
            </div>
        </section>

        <hr />

        <!-- GAME DEVELOPMENT SECTION -->
        <section id="Game-Dev">
            <h2> <b>  Game Development</b></h2>
            <br />
            <div style="margin:10px; padding: 10px">
                <div class="row 1">
                    <div class="column 1">
                        <!-- Whisker Witchery -->
                        <div id="Whisker-Witchery" class="card 1">
                            <a class="card-bg" asp-controller="Portfolio" asp-action="WhiskerWitchery">
                                <h1 class="card-text title-white">Whisker Witchery</h1>
                            </a>
                            <div class="hide title-white card-fonts">
                                <div class="column">
                                    <h3 class="title-white">Whisker Witchery</h3>
                                    <hr />
                                    <h5 class="title-white" style="font-size: 26px;"><b>Personal Contributions:</b></h5>
                                    <div class="column">
                                            <ul class="title-white" style="font-size: 22px; text-align: left;">
                                                <li>
                                                Software Engineering
                                                </li>
                                                <li>
                                                Presentations & User Research
                                                </li>
                                                <li>
                                                UI/UX Design
                                                </li>
                                                <li>
                                                2D Illustrations & Promotional Materials
                                                </li>
                                            </ul>
                                        <br />
                                    </div>
                                    <div class="row">
                                        <div style="text-align:right; width: max-content; flex-grow:10; font-family:'Courier New'" class="column">
                                            <h5 style="text-align: right; padding-top: 3px;" class="text-white">
                                                READ MORE
                                            </h5>
                                        </div>
                                        <div class="column">
                                            <img src="~/Portfolio/Icons/next.png" style="width:100%; filter:invert(1); margin-left:auto;" />
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="column 2">
                        <!-- Senior Hearts -->
                        <div id="Senior-Hearts" class="card 2">
                            <h1 class="card-text-old title-white">Senior Hearts</h1>
                        </div>
                    </div>
                </div>
                <div class="row 2">
                    <div class="column 3">
                        <!-- Leaf It Behind -->
                        <div id="Leaf-It-Behind" class="card 3">
                            <h1 class="card-text-old title-white">Leaf It Behind</h1>
                        </div>
                    </div>
                    <div class="column 4">
                        <!-- HiveQuest -->
                        <div id="HiveQuest" class="card 4">
                            <h1 class="card-text-old title-white">HiveQuest</h1>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <hr />

        <!-- SOFTWARE DEVELOPMENT SECTION -->
        <section id="Software-Dev">
            <h2> <b>Software Development</b></h2>
            <br />

            <p>TODO: software dev sections</p>
        </section>

        <hr />

        <!-- 2D ILLUSTRATION SECTION -->
        <section id="2D-Art">
            <h2> <b>2D Illustrations</b></h2>
            <br />

            <p>TODO: 2d illustration section</p>
        </section>

    </div>

</body>