@{
    ViewData["Title"] = "Home Page";
}

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Ray Parker">

    <title>Ray Parker Portfolio - Home</title>

    <base href="/RayParkerPortfolio/" />

    <link rel="canonical" href="https://getbootstrap.com/docs/5.2/examples/jumbotron/">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
          crossorigin="anonymous">
    <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">

    <link href="/docs/5.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="stylesheet" href="Site.css" />

    <!-- Template Main CSS File -->
    <link href="/css/site.css" rel="stylesheet">

</head>

<body>
    <div class="regular">

        <section>
            <div class="row regular home-section">
                <div class="col-lg-6 pt-4 pt-lg-0 content about-column" data-aos="fade-left">
                    <h1 style="padding: 30px; text-align:center;"><b>Hi, I'm Ray!</b></h1>
                    <h4 style="text-align:center; color: #592B15"> I am a <span>software engineer</span> and a <span>technical artist</span>.</h4>
                    <hr style="color: #592B15" />
                    <h4 style="padding: 0px;text-indent: 20px !important;"> In 2023, I graduated from the University of Utah with a Bachelor's in Honors Computer Science with an emphasis in Games.</h4>
                    <h4 style="padding: 20px 0px;text-indent: 20px !important;"> Since working as a freelance illustrator, I couldn't imagine a life without working in both creative and technical disciplines, hence my love for video games and web dev! I love using my creative and technical skills to create breathtaking, interactive experiences.</h4>
                    <br />
                </div>
                <div style="position: relative; display: flex; overflow: hidden; padding: 25px 30px;" class="autumn-bg col-lg-6" data-aos="fade-right">
                    <img class="center-child-img-1" src="~/About/Icon Test.png" alt="Ray Parker Portrait">                
                    <div id="index-button-row" class="flex-container center-child-img-2">
                        <button onclick="window.location.href = '/Portfolio';" class="nav-link column button" style="margin:10px; padding: 10px 10px 10px 10px;">
                            Portfolio
                        </button>
                        <button onclick="window.location.href = '/Home/Contact';" class="nav-link column button" style="margin:10px; padding: 10px 10px 10px 10px;">
                            Contact
                        </button>
                        <button class="nav-link column button" style="margin:10px; padding: 10px 10px 10px 10px;" href="~/About/Ray_Parker_CV.pdf" download="RayParkerResume">
                            <i class="fa fa-download"></i> Resume
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <section>
            <div style="margin:10px; padding: 10px">
                <div class="row 1">
                    <div class="column 1">
                        <!-- Whisker Witchery -->
                        <div id="Whisker-Witchery" class="card">
                            <a class="card-bg" asp-controller="Portfolio" asp-action="WhiskerWitchery">
                                <h1 class="card-text title-white">Whisker Witchery</h1>
                            </a>
                            <div class="hide title-white card-fonts">
                                <div class="column">
                                    <h3 class="title-white">Whisker Witchery</h3>
                                    <hr />
                                    <h5 class="title-white mobile-header-text"><b>Personal Contributions:</b></h5>
                                    <div class="column">
                                        <ul class="title-white mobile-text">
                                            <li>
                                                Software Engineering
                                            </li>
                                            <li>
                                                Presentations & User Research
                                            </li>
                                            <li>
                                                UI/UX Design
                                            </li>
                                            <li>
                                                2D Illustrations & Promotional Materials
                                            </li>
                                        </ul>
                                        <br />
                                    </div>
                                    <div class="row">
                                        <div style="text-align:right; width: max-content; flex-grow:10; font-family:'Courier New'" class="column read-more">
                                            <h5 style="text-align: right; padding-top: 3px;" class="text-white">
                                                READ MORE
                                            </h5>
                                        </div>
                                        <div class="column">
                                            <img src="~/Portfolio/Icons/next.png" class="card-arrow" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="column 2">
                        <!-- Leaf It Behind -->
                        <div id="Leaf-It-Behind" class="card">
                            <a class="card-bg" asp-controller="Portfolio" asp-action="LeafItBehind">
                                <h1 class="card-text title-white">Leaf It Behind</h1>
                            </a>
                            <div class="hide title-white card-fonts">
                                <div class="column">
                                    <h3 class="title-white">Leaf It Behind</h3>
                                    <hr />
                                    <h5 class="title-white mobile-header-text"><b>Personal Contributions:</b></h5>
                                    <div class="column">
                                        <ul class="title-white mobile-text">
                                            <li>
                                                Character Design
                                            </li>
                                            <li>
                                                Character Animation
                                            </li>
                                            <li>
                                                2D Illustrations
                                            </li>
                                            <li>
                                                Background Art
                                            </li>
                                        </ul>
                                        <br />
                                    </div>
                                    <div class="row">
                                        <div style="text-align:right; width: max-content; flex-grow:10; font-family:'Courier New'" class="column read-more">
                                            <h5 style="text-align: right; padding-top: 3px;" class="text-white">
                                                READ MORE
                                            </h5>
                                        </div>
                                        <div class="column">
                                            <img src="~/Portfolio/Icons/next.png" class="card-arrow" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>

</body>